<?xml version="1.0" encoding="UTF-8"?>
<Server port="8000" shutdown="SHUTDOWN">
	<Listener SSLEngine="on" className="org.apache.catalina.core.AprLifecycleListener" />
	<Listener className="org.apache.catalina.core.JasperListener" />
	<Listener className="org.apache.catalina.mbeans.ServerLifecycleListener" />
	<Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener" />

	<Service name="Catalina">
		<Connector connectionTimeout="20000" maxThreads="20" port="7000" protocol="HTTP/1.1" redirectPort="8443" URIEncoding="UTF-8"/>
		<Engine defaultHost="localhost" name="Catalina">
			<Host appBase="webapps" name="localhost"
				unpackWARs="false"  deployOnStartup="false" autoDeploy="false"
				xmlNamespaceAware="false" xmlValidation="false">
				<Context docBase="" path="" reloadable="false">
				</Context>
				
				<Context docBase="/usr/apps/projects/iminbak" path="" reloadable="false" />				
			</Host>
		</Engine>
	</Service>
</Server>
